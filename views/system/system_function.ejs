<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="function_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-3">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseTree" data-toggle="collapse">
                      系统功能树
                    </a>
                  </h3>
                </div>
                <div id="collapseTree" class="panel-collapse collapse in">
                  <div class="panel-body organize-tree">
                    <ul id="functionTree" class="ztree" data-id="<%= user.partner._id%>"></ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-9">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseDepart" data-toggle="collapse"><span id="departmentName"><%= user.partner.name%></span>&nbsp;
                    (管理员：<%= user.name%></span>)</a>
                  </h3>
                </div>
                <div id="collapseDepart" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <ul class="tools-bar row">
                      <li>
                        <a href="javascript:;" class="btn-refresh"><i class="fa fa-refresh"></i><br>刷新</a> 
                      </li>
                      <li>
                        <a href="#newFunctionModal" class="btn-new" data-toggle="modal">
                          <i class="fa fa-plus-square"></i><br>新增
                        </a>
                      </li>
                      <li>
                        <a href="#editFunctionModal" class="btn-edit" data-toggle="modal"><i class="fa fa-edit"></i><br>编辑</a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-remove"><i class="fa fa-remove"></i><br>删除</a> 
                      </li>
                    </ul>
                    <h3 class="page-header">功能点详情</h3>
                    <table class="table table-bordered">
                      <thead>
                        <tr class="info">
                          <th>名称</th>
                          <th>路由</th>
                          <th>描述</th>
                          <th>备注</th>
                          <th>创建者</th>
                          <th>修改者</th>
                          <th>创建时间</th>
                        </tr>
                      </thead>
                      <tbody class="func-detail">
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="newFunctionModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 id="newFunctionTitle" class="modal-title">新增功能模块</h4>
              </div>
              <div class="modal-body">
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label organize-name">功能名称</label>
                  <div class="col-md-6">
                    <input type="text" id="newFunctionName" class="form-control" placeholder="必填">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label organize-name">路由地址</label>
                  <div class="col-md-6">
                    <input type="text" id="newFunctionRouter" class="form-control" placeholder="必填">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label">功能描述</label>
                  <div class="col-md-6">
                    <textarea id="newFunctionDesc" class="form-control" rows="3" placeholder="必填"></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label">备注</label>
                  <div class="col-md-6">
                    <textarea id="newFunctionNote" class="form-control" rows="2" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="reset" id="btnReset" data-dismiss="modal" class="btn btn-default">取消</button>
                <button id="newFunctionBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="editFunctionModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">编辑功能模块</h4>
              </div>
              <div class="modal-body">
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label organize-name">功能名称</label>
                  <div class="col-md-6">
                    <input type="text" id="editFunctionName" class="form-control" placeholder="必填">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label organize-name">路由地址</label>
                  <div class="col-md-6">
                    <input type="text" id="editFunctionRouter" class="form-control" placeholder="必填">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label">功能描述</label>
                  <div class="col-md-6">
                    <textarea id="editFunctionDesc" class="form-control" rows="3" placeholder="必填"></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label">备注</label>
                  <div class="col-md-6">
                    <textarea id="editFunctionNote" class="form-control" rows="2" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button id="editFunctionBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.zTree.all.min.js"></script>
    <script src="/js/system.js"></script>
  </body>
</html>
