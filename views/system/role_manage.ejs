<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
    <link rel="stylesheet" href="/plugins/dataTables/css/dataTables.bootstrap.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="role_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-info">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">
                <span>角色管理</span>
                <a href="#newRoleModal" class="pull-right" data-toggle="modal">创建角色</a>
              </h3>
            </div>
            <div class="panel-body">
              <table id="roleDataTable" class="table table-hover table-striped table-bordered">
                <thead>
                  <tr>
                    <th>序号</th>
                    <th>角色名称</th>
                    <th>创建者</th>
                    <th>创建时间</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                <% roles.forEach(function(role, index){%>
                  <tr data-id="<%= role._id%>">
                    <td><%= index+1%></td>
                    <td class="name"><%= role.name%></td>
                    <td><%= role.creator.name%></td>
                    <td><%= moment(role.meta.createAt).format('YYYY-MM-DD HH:mm:ss')%></td>
                    <td>
                      <a href="#editRoleModal" class="btn btn-info btn-set" data-toggle="modal">配置功能</a>
                      <button class="btn btn-danger btn-del m-l">删除</button>
                    </td>
                  </tr>
                <%})%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="newRoleModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form action="/system/new_role" method="post" id="newRoleForm" class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">创建角色</h4>
              </div>
              <div class="modal-body">
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label organize-name">角色名称</label>
                  <div class="col-md-6">
                    <input type="text" name="role[name]" id="newRoleName" class="form-control" placeholder="必填">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-md-offset-1 col-md-2 control-label">角色描述</label>
                  <div class="col-md-6">
                    <textarea name="role[desc]" id="newRoleDesc" class="form-control" rows="3" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="reset" data-dismiss="modal" class="btn btn-default btn-reset">取消</button>
                <button id="newRoleBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="editRoleModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content max-w-350">
            <form class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">角色设置</h4>
              </div>
              <div class="modal-body max-h-400">
                <ul id="functionTree" class="ztree"></ul>
              </div>
              <div class="modal-footer">
                <button type="reset" data-dismiss="modal" class="btn btn-default">取消</button>
                <button id="setRoleBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.ztree.all.min.js"></script>
    <script src="/plugins/dataTables/js/jquery.dataTables.js"></script>
    <script src="/plugins/dataTables/js/dataTables.bootstrap.js"></script>
    <script src="/js/role.js"></script>
  </body>
</html>
