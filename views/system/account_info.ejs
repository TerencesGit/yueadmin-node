<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="account_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">
                <a href="#collapseTwo" data-toggle="collapse">账户信息</a>
                <a href="javascript:history.go(-1)" class="pull-right">返回</a>
              </h3>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse in">
              <div class="panel-body">
                <div class="col-md-offset-3 col-md-6">
                  <div class="text-center m-b">
                    <img src="<%if(account.avatar){%>/upload/avatar/<%= account.avatar %><%}else{%> /img/avatar.gif <%}%>" class="img-circle" width="200" height="200" title="<%= account.name%>" alt="头像">
                  </div>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>姓名</dt>
                    <dd><%= account.name%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>邮箱</dt>
                    <dd><%= account.email%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>手机号</dt>
                    <dd><%if(account.mobile){%><%= account.mobile%><%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>qq</dt>
                    <dd><%if(account.qq){%><%= account.qq%><%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>性别</dt>
                    <dd>
                    <% if(account.gender == '0'){ %> 男
                    <% }else if(account.gender == '1'){ %> 女
                    <% }else{ %> 未知 <% } %>
                    </dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>生日</dt>
                    <dd><%if(account.birthday){%><%= moment(account.birthday).format('YYYY-MM-DD')%><%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>身份证号</dt>
                    <dd><%if(account.idcard){%> <%= account.idcard%> <%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>籍贯</dt>
                    <dd><%if(account.address){%> <%= account.address %> <%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>公司</dt>
                    <dd><%if(account.partner){%> <%= account.partner.name %> <%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>所属部门</dt>
                    <dd><%if(account.organize){%> <%= account.organize.name %> <%}%></dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>身份证正面</dt>
                    <dd>
                      <%if(account.idcard_front){%>
                      <img src="/upload/idcard/<%= account.idcard_front %>" width="245" height="158" class="img-rounded" title="身份证正面" alt="身份证正面">
                      <%}else{%>
                      暂无
                      <%}%>
                    </dd>
                  </dl>
                </div>
                <div class="col-md-6">
                  <dl class="dl-horizontal">
                    <dt>身份证反面</dt>
                    <dd>
                      <%if(account.idcard_back){%>
                      <img src="/upload/idcard/<%= account.idcard_back %>" width="245" height="158" class="img-rounded" title="身份证反面" alt="身份证反面">
                      <%}else{%>暂无<%}%>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
          <div class="warp-footer"></div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/message.js"></script>
  </body>
</html>
