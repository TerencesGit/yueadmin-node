<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="notice_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"><%= title%>
              <a href="javascript:history.go(-1)" class="pull-right">返回</a>
              </h3>
            </div>
            <div class="panel-body">
              <form action="/system/save_notice" method="post" id="noticeForm" class="form-horizontal m-t" role="form" enctype="multipart/form-data">
                <input type="hidden" name="notice[id]" value="<%=notice._id%>">
                <div class="form-group row">
                  <label for="noticeTitle" class="control-label col-md-2">公告标题</label>
                  <div class="col-md-7">
                    <input type="text" name="notice[title]" id="noticeTitle" class="form-control" placeholder="请输入公告标题" value="<%=notice.title%>"/>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="noticeCont" class="control-label col-md-2">公告内容</label>
                  <div class="col-md-7">
                   <textarea name="notice[content]" id="noticeCont" rows="10" class="form-control" placeholder="请输入公告内容"><%=notice.content%></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="noticePicPreview" class="control-label col-md-2">添加图片</label>
                  <div class="col-md-7">
                    <input type="file" name="noticeFile" class="file-control">
                    <div class="preview-area clearfix w-170">
                      <img src="/img/upload.png" class="img-preview" width="150" height="150" title="选择图片" alt="选择本地图片">
                      <a href="javascript:;" class="img-remove"></a>
                    </div>
                    <div class="alert w-150"></div>
                  </div>
                </div>
                <div class="form-group text-center">
                  <button type="submit" id="noticeSubmit" class="btn btn-primary">提交</button>
                  <button type="reset" class="btn btn-default m-l">重置</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/notice.js"></script>
  </body>
</html>
