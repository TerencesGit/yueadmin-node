<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/dataTables/css/dataTables.bootstrap.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="contract_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-secondary">
            <div class="panel-heading">
              <h3 class="panel-title">
                <span>合同管理</span>
                <a href="/admin/new_contract" class="pull-right" data-toggle="modal"><i class="fa fa-plus-square m-r-5"></i>新增</a>
              </h3>
            </div>
            <div class="panel-body min-h-450">
              <table id="contractDataTable" class="table table-bordered table-hover table-striped">
                <thead>
                  <tr class="">
                    <th>序号</th>
                    <th>合同甲方</th>
                    <th>合同乙方</th>
                    <th>合同丙方</th>
                    <th>签署时间</th>
                    <th>合同模板</th>
                    <th>创建者</th>
                    <th>创建时间</th>
                    <th>详情</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                 <%contracts.forEach(function(contract, index){%>
                    <tr>
                      <td><%= index+1%></td>
                      <td class="max-w-130 ellipsis" title="<%= contract.party_a_name%>"><%= contract.party_a_name%></td>
                      <td class="max-w-130 ellipsis" title="<%= contract.party_b_name%>"><%= contract.party_b_name%></td>
                      <td class="max-w-130 ellipsis" title="<%= contract.party_c_name%>">
                      <%if(contract.party_c_name){%>
                        <%= contract.party_c_name%>
                      <%}else{%>-<%}%>
                      </td>
                      <td><%= contract.sign_time%></td>
                      <td><%= contract.template.name%></td>
                      <td><%= contract.creator.name%></td>
                      <td><%= moment(contract.create_time).format('YYYY-MM-DD')%></td>
                      <td><a href="/admin/show_contract_detail?id=<%=contract._id%>" class="btn btn-link" title="查看">查看</a>
                      </td>
                      <td>
                        <a href="/admin/edit_contract?id=<%= contract._id%>" class="btn btn-warning" title="查看">编辑</a>
                        <a href="/admin/remove_contract?id=<%= contract._id%>" class="btn btn-danger btn-contract-remove" title="删除">删除</a>
                      </td>
                    </tr>
                 <%})%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/plugins/dataTables/js/jquery.dataTables.js"></script>
    <script src="/plugins/dataTables/js/dataTables.bootstrap.js"></script>
    <script src="/js/contract.js"></script>
  </body>
</html>
