<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="account_security">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-info account-modify">
              <div class="panel-heading">
                <h3 class="panel-title">修改密码</h3>
              </div> 
              <div class="panel-body">
                <form action="/account/modify_password" method="post" id="modifyPasswdForm" class="form-horizontal" role="form">
                  <div class="form-group">
                    <label class="col-md-4 control-label">原密码：</label>
                    <div class="col-md-5">
                      <input type="password" name="user[oldpasswd]" id="oldPasswd" class="form-control" placeholder="输入原密码">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4 control-label">新密码：</label>
                    <div class="col-md-5">
                      <input type="password" name="user[newpasswd]" id="newPasswd" class="form-control" placeholder="请输入新密码">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4 control-label">新密码确认：</label>
                    <div class="col-md-5">
                      <input type="password" id="confirmPasswd" class="form-control" placeholder="再次输入新密码" disabled="true">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-offset-4 col-md-5">
                      <button type="submit" id="btnModifyPasswd" class="btn btn-primary btn-block">确认</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          <div class="warp-footer"></div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/account.js"></script>
  </body>
</html>
