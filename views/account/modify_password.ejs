<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="account_security">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">
                <a href="#collapseOne" data-toggle="collapse"><i class="fa fa-user-circle-o"></i>修改密码</a>
                <a href="javascript:history.go(-1)" class="pull-right">返回<i class="fa fa-mail-reply"></i></a>
              </h3>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
              <div class="panel-body min-h-400 p-50">
                <form action="/account/modify_password" method="post" id="modifyPasswdForm" class="form-horizontal m-t-40" role="form">
                  <div class="form-group">
                    <label class="col-md-4 control-label">原密码：</label>
                    <div class="col-md-5">
                      <input type="password" name="user[oldpasswd]" id="oldPasswd" class="form-control" placeholder="输入原密码">
                      <div class="alert"></div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4 control-label">新密码：</label>
                    <div class="col-md-5">
                      <input type="password" name="user[newpasswd]" id="newPasswd" class="form-control" placeholder="输入新密码">
                      <div class="alert"></div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4 control-label">新密码确认：</label>
                    <div class="col-md-5">
                      <input type="password" id="confirmPasswd" class="form-control" placeholder="确认新密码">
                      <div class="alert"></div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-offset-4 col-md-5">
                      <button type="submit" id="btnModifyPasswd" class="btn btn-primary btn-block letter-space">确认</button>
                    </div>
                  </div>
                </form>
              </div>
            </div> 
          </div>
          <div class="warp-footer"></div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/account.js"></script>
  </body>
</html>
