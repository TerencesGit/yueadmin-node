<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="account_info">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid account">
          <div class="row">
            <div class="col-md-3">
              <div class="panel panel-primary">
                <div class="panel-body">
                  <div class="text-center m-b">
                    <img src="<%if(user.avatar){%>/upload/avatar/<%= user.avatar %><%}else{%>/img/avatar.gif<%}%>" class="img-circle" width="200" height="200" title="<%= user.name %>" alt="头像">
                    <h4 class="m-t text-info"><%= user.name %></h4>
                  </div>
                  <ul class="list-group">
                    <li class="list-group-item active">
                      <i class="fa fa-id-badge"></i>
                      <a href="#collapseOne" data-toggle="collapse" class="white">账户基本信息</a>
                    </li>
                    <div id="collapseOne" class="panel-collapse collapse in">
                      <li class="list-group-item">
                        <a href="/account/account_info_edit"><i class="fa fa-edit"></i>编辑账户信息</a>
                      </li>
                      <li class="list-group-item">
                        <label>邮箱:</label>
                        <span><%= user.email %></span>
                      </li>
                      <li class="list-group-item hidden">
                        <label>性别:</label>
                        <span>
                        <% if(user.gender == '0'){ %>男
                        <% }else if(user.gender == '1'){ %>女
                        <% }else{ %> 未知 <%}%>
                        </span>
                      </li>
                      <li class="list-group-item hidden">
                        <label>年龄:</label>
                        <span>
                          <% if(user.birthday){ %><%= new Date().getFullYear() - moment(user.birthday).format('YYYY') %>
                          <%}else{%>未设置<%}%>
                        </span>
                      </li>
                      <li class="list-group-item">
                        <label>所在城市：</label>
                        <span>
                          <%if(user.address){%><%=user.address%>
                          <%}else{%>未设置<%}%>
                        </span>
                      </li>
                      <li class="list-group-item">
                        <label>所属公司：</label>
                        <span>
                          <%if(user.partner){%><%=user.partner.name %>
                          <%}else{%>未设置<%}%>
                        </span>
                      </li>
                      <li class="list-group-item">
                        <label>所属部门：</label>
                        <span>
                          <% if(user.organize){ %><%= user.organize.name %>
                          <% }else{%>未设置<%}%>
                        </span>
                      </li>
                    </div>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-9">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseTwo" data-toggle="collapse"><i class="fa fa-id-card"></i>账户详细信息</a>
                  </h3>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse in">
                  <div class="panel-body min-h-520 m-t">
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>姓名</dt>
                        <dd><%= user.name%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>邮箱</dt>
                        <dd><%= user.email%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>手机号</dt>
                        <dd><%if(user.mobile){%><%= user.mobile%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>qq</dt>
                        <dd><%if(user.qq){%><%= user.qq%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>性别</dt>
                        <dd>
                        <% if(user.gender == '0'){ %> 男
                        <% }else if(user.gender == '1'){ %> 女
                        <% }else{ %> 未知 <% } %>
                        </dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>生日</dt>
                        <dd><%if(user.birthday){%><%= moment(user.birthday).format('YYYY-MM-DD')%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>身份证号</dt>
                        <dd><%if(user.idcard){%> <%= user.idcard%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>籍贯</dt>
                        <dd><%if(user.address){%> <%= user.address %><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>身份证正面</dt>
                        <dd>
                          <%if(user.idcard_front){%>
                          <img src="/upload/idcard/<%= user.idcard_front %>" width="245" height="158" class="img-rounded" title="身份证正面" alt="身份证正面">
                          <%}else{%>
                          <span>暂无</span>
                          <%}%>
                        </dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="horizontal clearfix">
                        <dt>身份证反面</dt>
                        <dd>
                          <%if(user.idcard_back){%>
                          <img src="/upload/idcard/<%= user.idcard_back %>" width="245" height="158" class="img-rounded" title="身份证反面" alt="身份证反面">
                          <%}else{%> 
                          <span>暂无</span>
                          <%}%>
                        </dd>
                      </dl>
                    </div>
                  </div>
                </div>
              </div>
              <div class="panel panel-danger">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseThree" data-toggle="collapse"><i class="fa fa-commenting m-r-5"></i>消息动态（删除）</a>
                    <a href="#" class="pull-right" data-dismiss="panel" aria-hidden="true">&times;</a>
                  </h3>
                </div>
                <div id="collapseThree" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <ul class="media-list">
                      <% messages.forEach(function(message){ %>
                      <li class="media">
                        <div class="pull-left">
                          <a href="/user/user_detail?id=<%= message.user._id%>" class="media-avatar">
                            <img src="<%if(message.user.avatar){%>/upload/avatar/<%= message.user.avatar %><%}else{%>/img/avatar.gif<%}%>" alt="" class=" img-rounded" width="30" height="30">
                            <span><%= message.user.name%></span>
                          </a>
                        </div>
                        <div class="media-body">
                          <p class="pull-left p-t-5">
                            <%- message.content %>
                          </p>
                          <div class="pull-right relative">
                            <% if(message.user._id == user._id){%>
                            <a href="javascript:;" class="btn btn-link btn-delete" data-id="<%= message._id %>" >&times;</a>
                            <%}%>
                            <span>
                              <%= moment(message.meta.createAt).format('MM-DD HH:mm:ss') %>
                            </span>
                          </div>
                        </div>
                      </li>
                      <% }) %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="warp-footer"></div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/message.js"></script>
  </body>
</html>
