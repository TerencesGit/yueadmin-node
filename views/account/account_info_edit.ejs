<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="account_info">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="col-md-offset-1 col-md-11 info-title">           
              <h2>个人简介</h2>
          </div>
          <div class="row">
            <div class="col-md-1"></div>
            <div class="info-edit col-md-6">
              <form role="form">        
                <div class="form-group">
                  <label for="name">昵称</label>
                  <input type="text" class="form-control" placeholder="请输入昵称">
                </div>
                <div class="form-group">
                  <label for="name">邮箱</label>
                  <select class="form-control">
                    <option></option>
                    <option>1234567@qq.com</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="name">性别</label>
                  <input type="text" class="form-control">
                </div>
                <div class="form-group">
                  <label for="name">年龄</label>
                  <input type="text" class="form-control">
                </div>
                 <div class="form-group">
                  <label for="name">学历</label>
                  <input type="text" class="form-control">
                </div>
                 <div class="form-group">
                  <label for="name">籍贯</label>
                  <input type="text" class="form-control">
                </div>               
               <div class="form-group">
                <label for="name">个人介绍</label>
                <textarea class="form-control"></textarea>
                </div>
              </form>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4 info-upload">
               <dl class="form-group edit-avatar mr-4 float-right">
                <dt>个人图片</dt>
                <dd class="avatar-upload-container clearfix">
                  <form id="uploadForm" method="post" action="/user/avatarUpload" enctype="multipart/form-data">
                    <input type="file" name="avatar" id="fileUp">
                    <% if(user && user.avatar){ %>  <img id="avatar" class="avatar rounded-2" src="/upload/<%= user.avatar %>" width="200" height="200" alt="头像上传"/>
                    <% }else{ %> <img src="/img/avatar.jpg" id="avatar" class="avatar rounded-2" width="200" height="200" alt="头像上传"> <% } %>
                    <div class="avatar-upload">
                      <button type="submit" id="btnUpload" class="btn btn-info">上传图片</button>
                    </div>
                  </form>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
     <script>
      $('#fileUp').change(function(){
        uploadPreview(this,$('#avatar'))
      })
      $('#avatar').click(function(){
        $('#fileUp').click()
      })
      var fileUp = $('#fileUp')[0];
      $('#btnUpload').on('click', function(e){
        e.preventDefault()
        if(fileUp.files && fileUp.files[0]){
          $('#uploadForm').submit()
        }
      })
    </script>
  </body>
</html>
