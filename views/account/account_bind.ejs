<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="account_bind">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <ol class="breadcrumb">
              <li><a href="#">账户管理</a></li>
              <li class="active"><%= title%></li>
          </ol>
          <div class="row">
            <div class="col-md-offset-1 col-md-10 account-panel">
              <div  class="panel panel-default">
                <div class="panel-heading">
                  <h3>账号设置</h3>
                </div>
                <div class="panel-body">
                  <ul class="tab-list col-md-2">
                    <li class="<% if(tabIndex == '0'){ %>curr<%}%>">账号绑定</li>
                    <% if(user && user.mobile){ %>
                    <li class="<% if(tabIndex == '1'){ %>curr<%}%>">修改手机号码</li>
                    <% }else{ %>
                    <li class="<% if(tabIndex == '1'){ %>curr<%}%>">绑定手机号码</li>
                    <% } %>
                    <li class="<% if(tabIndex == '2'){ %>curr<%}%>">修改邮箱</li>
                    <li class="<% if(tabIndex == '3'){ %>curr<%}%>">修改密码</li>
                  </ul>
                  <div class="tabcont-list col-md-10">
                    <div class="tab-content bind-account" style="display: block">
                      <div class="row">
                        <label class="col-md-3">
                         当前登录账号
                        </label>
                        <span class="col-md-5"><%= user.email%></span>
                        <% if(user && user.email_verified == '0'){ %>
                        <a href="#" class="col-md-3 email-bind">未验证</a>
                        <% }else{ %>
                        <a href="#" class="col-md-3 email-bind">已验证</a> 
                        <% } %>
                      </div>
                      <div class="row">
                        <label class="col-md-3">手机号码：</label>
                        <% if(user && user.mobile){ %>
                        <span class="col-md-5"><%= user.mobile%></span>
                        <a href="javascript:;" class="col-md-3 mobile-bind">已绑定</a>
                        <% }else{ %>
                        <span class="col-md-5"></span>
                        <a href="javascript:;" class="col-md-3 mobile-bind">未绑定</a>
                        <% } %>
                      </div>
                    </div>
                    <% if(user && user.mobile){ %>
                    <div class="tab-content modify-mobile">
                      <form action="/account/bind_mobile" method="post" id="modifyMobileForm" class="form-horizontal" role="form">
                        <% if(user && user.error){ %>
                        <div class="alert alert-danger alert-back alert-dismissable"><i class="fa fa-warning"></i><%= user.error %>  <button class="close" data-dismiss="alert">&times;</button></div>
                        <% } %>
                        <% if(user && user.success){ %>
                        <div class="alert alert-success alert-back alert-dismissable"><i class="fa fa-warning"></i><%= user.success %> <button class="close" data-dismiss="alert">&times;</button> </div>
                        <% } %>
                        <div class="form-group">
                          <label class="col-md-3 control-label">当前手机号码：</label>
                          <span class="col-md-5 control-span"><%= user.mobile %></span>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">新手机号码：</label>
                          <div class="col-md-6">
                            <input type="text" name="user[mobile]" id="newMobile" class="form-control" placeholder="输入手机号码" >
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">验证码：</label>
                          <div class="col-md-3">
                            <input type="text" name="user[phonecode]" id="phoneCode2" class="form-control" placeholder="输入验证码">
                          </div>
                          <div class="col-md-3">
                            <button type="button" id="btnSendCode2" class="btn btn-success btn-block" data-status="0">获取验证码</button>
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-6 m-t">
                            <button type="submit" id="btnModifyMobile" class="btn btn-primary btn-block">确定</button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <% }else{ %>
                    <div class="tab-content bind-mobile">
                      <form action="/account/bind_mobile" method="post" id="bindMobileForm" class="form-horizontal" role="form">
                        <% if(user && user.error){ %>
                        <div class="alert alert-danger alert-back"><i class="fa fa-warning"></i><%= user.error %></div>
                        <% } %>
                        <% if(user && user.success){ %>
                        <div class="alert alert-success alert-back"><i class="fa fa-warning"></i><%= user.success %></div>
                        <% } %>
                        <div class="form-group">
                          <label class="col-md-3 control-label">手机号码：</label>
                          <div class="col-md-6">
                            <input type="text" id="mobile" class="form-control" name="user[mobile]" placeholder="输入手机号码" >
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">验证码：</label>
                          <div class="col-md-3">
                            <input type="text" name="user[phonecode]" id="phoneCode" class="form-control" placeholder="输入验证码">
                          </div>
                          <div class="col-md-3">
                            <button type="button" id="btnSendCode" class="btn btn-success btn-block" data-status="0">获取验证码</button>
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-6 m-t">
                            <button type="submit" id="btnBindMobile" class="btn btn-primary btn-block">确定</button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <% } %>
                    <div class="tab-content modify-email">
                      <form action="/account/modify_email" method="get" id="modifyEmailForm" class="form-horizontal" role="form">
                        <div class="form-group">
                          <label class="col-md-3 control-label">当前邮箱：</label>
                          <span class="col-md-5 control-span"><%= user.email %></span>
                          <% if(user && user.email_verified == '0'){ %>
                          <a href="/account/verify_email?email=<%= user.email %>" class="verified">点击验证</a>
                          <% } %>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">新邮箱：</label>
                          <div class="col-md-6">
                            <input type="text" name="email" id="newEmail" class="form-control" placeholder="输入邮箱号" >
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-6 m-t">
                            <button type="submit" id="btnModifyEmail" class="btn btn-primary btn-block">确定</button>
                          </div>
                        </div>
                      </form>
                    </div>
                    <div class="tab-content modify-password">
                      <form action="/account/modify_password" method="post" id="modifyPasswdForm" class="form-horizontal" role="form">
                        <% if(user && user.error){ %>
                        <div class="alert alert-danger alert-back alert-dismissable"><i class="fa fa-warning"></i><%= user.error %>  <button class="close" data-dismiss="alert">&times;</button></div>
                        <% } %>
                        <% if(user && user.success){ %>
                        <div class="alert alert-success alert-back alert-dismissable"><i class="fa fa-warning"></i><%= user.success %> <button class="close" data-dismiss="alert">&times;</button> </div>
                        <% } %>
                        <div class="form-group">
                          <label class="col-md-3 control-label">原密码：</label>
                          <div class="col-md-5">
                            <input type="password" name="user[oldpasswd]" id="oldPasswd" class="form-control" placeholder="输入原密码">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">新密码：</label>
                          <div class="col-md-5">
                            <input type="password" name="user[newpasswd]" id="newPasswd" class="form-control" placeholder="请输入新密码">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-3 control-label">新密码确认：</label>
                          <div class="col-md-5">
                            <input type="password" id="confirmPasswd" class="form-control" placeholder="再次输入新密码" disabled="true">
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-5">
                            <button type="submit" id="btnModifyPasswd" class="btn btn-primary btn-block">确认</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
    <script src="/js/account.js"></script>
  </body>
</html>
