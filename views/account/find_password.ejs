<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../link') %>
</head>
<body>
		<div class="animated fadeInRight">
	    <div class="container reset-password">
		    <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title">找回密码</h2>
          </div>
          <div class="panel-body">
            <h4 class="col-md-offset-3 page-header"><em>1</em>填写账户信息</h4>
            <form action="/account/reset_password" method="get" id="findPasswdForm" class="reset-form form-horizontal" role="form">
              <div class="form-group">
                <label for="bindEmail" class="control-label col-md-3">邮箱号</label>
                <div class="col-md-9">
                  <input type="email" name="email" id="bindEmail" class="form-control" placeholder="请输入绑定邮箱号">
                </div>
              </div>
              <div class="form-group">
                <label for="bindEmail" class="control-label col-md-3">验证码</label>
                <div class="col-md-6">
                  <input type="text" id="findPasswdCode" class="form-control" placeholder="请输入验证码" />
                </div>
                <div class="col-md-2">
                  <canvas id="canvasCode" class="canvas-code" width="80px" height="34px" onClick="drawCode()"></canvas>
                </div>
              </div>         
              <div class="form-group submit">
                <div class="col-md-offset-3">
                  <button type="submit" id="btnFindPasswd" class="btn btn-primary btn-block">下一步</button>
                </div>
                
              </div>
            </form>             
          </div>
        </div>
	    </div>	    
    </div>
  <%- include('../script')%>
  <script src="/js/jquery.cookie.js"></script>
  <script src="/js/login.js"></script>
</body>
</html> 
