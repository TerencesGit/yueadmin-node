<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('../link') %>
</head>
<body>
		<div class="animated fadeInRight">
	    <div class="container reset-password">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title">找回密码</h2>
          </div>
          <div class="panel-body">
            <h4 class="col-md-offset-2 page-header"><em>2</em>设置密码</h4>
            <form action="/account/reset_password" method="post" id="resetPasswdForm" class="reset-form form-horizontal" role="form">
              <% if(user && user.error){ %>
              <div class="clearfix">
                <div class="alert alert-danger alert-dismissable"></i><%= user.error %>  <button class="close" data-dismiss="alert">&times;</button></div>
              </div>
              <% } %>
              <input type="hidden" name="user[uid]" value="<%if(user){%><%= user._id %><%}%>">
              <div class="form-group">
                <label for="resetPassword" class="control-label col-md-3">新密码</label>
                <div class="col-md-9">
                  <input type="password" name="user[newpasswd]" id="resetPassword" class="form-control" placeholder="设置新密码">
                </div>
              </div>
              <div class="form-group">
                <label for="resetPassword2" class="control-label col-md-3">确认密码</label>
                <div class="col-md-9">
                  <input type="password" id="resetPassword2" class="form-control" placeholder="确认密码">
                </div>
              </div>         
              <div class="form-group submit">
                <button type="submit" id="btnResetPasswd" class="btn btn-primary btn-block">提交</button>
              </div>
            </form>             
          </div>
        </div>
      </div>  	    
    </div>
  <%- include('../script')%>
  <script src="/js/jquery.cookie.js"></script>
  <script src="/js/login.js"></script>	
</body>
</html> 
