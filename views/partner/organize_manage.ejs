<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="organize_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-3">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseTree" data-toggle="collapse">
                      部门组织结构
                    </a>
                  </h3>
                </div>
                <div id="collapseTree" class="panel-collapse collapse in">
                  <div class="panel-body min-h-500">
                    <ul id="organizeTree" class="ztree" data-id="<%= user.partner._id%>"></ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-9">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseDepart" data-toggle="collapse"><span id="departmentName"><%= user.partner.name%></span>&nbsp;
                    (管理员：<%= user.name%></span>)</a>
                  </h3>
                </div>
                <div id="collapseDepart" class="panel-collapse collapse in">
                  <div class="panel-body min-h-500">
                    <ul class="tools border-bottom row">
                      <li>
                        <a href="javascript:;" class="btn-refresh" title="刷新">
                          <i class="fa fa-refresh"></i>
                          <span>刷新</span>
                        </a> 
                      </li>
                      <li>
                        <a href="#newOrganizeModal" class="btn-plus" data-toggle="modal" title="部门新增">
                          <i class="fa fa-plus-square"></i>
                          <span>新增</span>
                        </a>
                      </li>
                      <li>
                        <a href="#editOrganizeModal" class="btn-edit" data-toggle="modal" title="部门编辑">
                          <i class="fa fa-edit"></i>
                          <span>编辑</span>
                        </a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-remove"  title="部门删除">
                          <i class="fa fa-remove"></i>
                          <span>删除</span>
                        </a> 
                      </li>
                      <li>
                        <a href="#setRoleModal" class="btn-cog" data-toggle="modal" title=" 部门权限">
                          <i class="fa fa-cog"></i>
                          <span>权限</span>
                        </a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-unlock" title="部门启用">
                          <i class="fa fa-unlock"></i>
                          <span>启用</span>
                        </a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-ban"  title="部门禁用">
                          <i class="fa fa-ban"></i>
                          <span>禁用</span>
                        </a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-user" title="注册员工">
                          <i class="fa fa-user-plus"></i>
                          <span>注册员工</span>
                        </a> 
                        <form action="/partner/agent_register" method="post" id="userForm" class="hidden">
                          <input type="hidden" name="orgId" id="departmentId" value="">
                        </form>
                      </li>
                    </ul>
                    <h3 class="page-header">部门员工</h3>
                    <table class="table table-bordered">
                      <thead>
                        <tr class="info">
                          <th>序号</th>
                          <th>姓名</th>
                          <th>性别</th>
                          <th>手机</th>
                          <th>邮箱</th>
                          <th>部门</th>
                          <th>操作</th>
                        </tr>
                      </thead>
                      <tbody class="staff-list">
                      </tbody>
                    </table>
                    <ul class="pagination">
                      <li class="disabled"><a href="#">&laquo;</a></li>
                      <li class="active"><a href="#">1</a></li>
                      <li><a href="#">2</a></li>
                      <li><a href="#">3</a></li>
                      <li><a href="#">4</a></li>
                      <li><a href="#">5</a></li>
                      <li><a href="#">&raquo;</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="newOrganizeModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">新增部门</h4>
              </div>
              <div class="modal-body">
                <div class="form-group row">
                  <label for="organizeName" class="col-md-offset-1 col-md-2 control-label organize-name">部门名称</label>
                  <div class="col-md-6">
                    <input type="text" name="organize[name]" id="newOrganizeName" class="form-control">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="organizeProfile" class="col-md-offset-1 col-md-2 control-label">部门简介</label>
                  <div class="col-md-6">
                    <textarea name="organize[profile]" id="newOrganizeProfile" class="form-control" rows="3" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button id="newOrganizeBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="editOrganizeModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">部门编辑</h4>
              </div>
              <div class="modal-body">
                <div class="form-group row">
                  <label for="organizeName" class="col-md-offset-1 col-md-2 control-label organize-name">部门名称</label>
                  <div class="col-md-6">
                    <input type="text" name="organize[name]" id="editOrganizeName" class="form-control">
                  </div>
                </div>
                <div class="form-group row organize-profile">
                  <label for="organizeProfile" class="col-md-offset-1 col-md-2 control-label">部门简介</label>
                  <div class="col-md-6">
                    <textarea name="organize[profile]" id="editOrganizeProfile" class="form-control" rows="3" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button id="editOrganizeBtn" class="btn btn-success" data-dismiss="modal">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="setRoleModal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <form class="form-horizontal">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">权限设置</h4>
            </div>
            <div class="modal-body modal-control">
              <div class="row">
                <div class="alert alert-info m-l m-r">
                  <i class="fa fa-info-circle"></i>提示：点击权限名称显示对应的功能</div>
                <div class="col-md-6">
                  <ul id="roleList" class="list-group role-list">
                    <li class="list-group-item active">
                    权限列表
                    </li>
                    <% roles.forEach(function(role){%>
                    <li class="list-group-item" data-id="<%= role._id%>">
                      <a href="javascript:;" class="check"><i class="fa fa-check pull-right"></i></a>
                      <a href="javascript:;" class="role"><%= role.name%></a>
                    </li>
                    <%})%>
                  </ul>
                </div>
                <div class="col-md-6">
                  <ul id="functionTree" class="ztree"></ul>
                </div>
              </div> 
            </div>
            <div class="modal-footer">
              <button type="reset" data-dismiss="modal" class="btn btn-default">取消</button>
              <button id="setRoleBtn" class="btn btn-success" data-dismiss="modal">提交</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.zTree.all.min.js"></script>
    <script src="/js/organize.js"></script>
  </body>
</html>
