<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
    <style>
      .ztree li span.button.add {
        margin-left: 2px;
        margin-right: -1px;
        background-position: -144px 0;
        vertical-align: top;
      }
    </style>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="department_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-3">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseTree" data-toggle="collapse">
                      部门组织结构
                    </a>
                  </h3>
                </div>
                <div id="collapseTree" class="panel-collapse collapse in">
                  <div class="panel-body organize-tree">
                    <ul id="organizeTree" class="ztree" data-id="<%= partner._id%>"></ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-9">
              <div class="panel panel-info">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseDepart" data-toggle="collapse"><span id="departmentName"></span>&nbsp;(管理员：<%= user.name%>)</a>
                  </h3>
                </div>
                <div id="collapseDepart" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <ul class="tools-bar row">
                      <li>
                        <a href="javascript:;" class="btn-refresh"><i class="fa fa-refresh"></i><br>刷新</a> 
                      </li>
                      <li>
                        <a href="#myModal" class="btn-new" data-toggle="modal">
                          <i class="fa fa-plus-square"></i><br>新增
                        </a>
                      </li>
                      <li>
                        <a href="#myModal" class="btn-edit" data-toggle="modal"><i class="fa fa-edit"></i><br>编辑</a> 
                      </li>
                      <li>
                        <a href="javascript:;" class="btn-remove"><i class="fa fa-remove"></i><br>删除</a> 
                      </li>
                    </ul>
                    <h3 class="page-header">部门员工</h3>
                    <table class="table table-bordered">
                      <thead>
                        <tr class="info">
                          <th>序号</th>
                          <th>姓名</th>
                          <th>性别</th>
                          <th>手机</th>
                          <th>邮箱</th>
                          <th>籍贯</th>
                          <th>操作</th>
                        </tr>
                      </thead>
                      <tbody class="staff-list">
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form action="/partner/new_organize" method="post" id="organizeForm" class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">新增部门</h4>
              </div>
              <div class="modal-body">
                <input type="hidden" id="orgParentId" name="organize[parentId]" value="">
                <input type="hidden" id="organizeId" name="organize[id]" value="">
                <div class="form-group row">
                  <label for="" class="col-md-offset-1 col-md-2 control-label">部门名称</label>
                  <div class="col-md-8">
                    <input type="text" name="organize[name]" id="organizeName" class="form-control username">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="" class="col-md-offset-1 col-md-2 control-label">部门简介</label>
                  <div class="col-md-8">
                    <textarea name="organize[profile]" id="organizeProfile" class="form-control" rows="3" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button type="submit" id="organizeSubmitBtn"class="btn btn-success">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.zTree.all.min.js"></script>
    <script src="/js/organize.js"></script>
  </body>
</html>
