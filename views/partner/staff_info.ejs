<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="staff_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <a href="#collapseTwo" data-toggle="collapse"><%= title%></a>
                  </h3>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse in">
                  <div class="panel-body">
                    <div class="col-md-12">
                      <div class="text-center m-b">
                        <img src="<%if(user.avatar){%>/upload/avatar/<%= user.avatar %><%}else{%> /img/avatar.gif <%}%>" class="img-circle" width="200" height="200" title="头像" alt="头像">
                      </div>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>姓名</dt>
                        <dd><%= user.name%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>邮箱</dt>
                        <dd><%= user.email%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>手机号</dt>
                        <dd><%if(user.mobile){%><%= user.mobile%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>qq</dt>
                        <dd><%if(user.qq){%><%= user.qq%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>性别</dt>
                        <dd>
                        <% if(user.gender == '0'){ %> 男
                        <% }else if(user.gender == '1'){ %> 女
                        <% }else{ %> 未知 <% } %>
                        </dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>生日</dt>
                        <dd><%if(user.birthday){%><%= moment(user.birthday).format('YYYY-MM-DD')%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>身份证号</dt>
                        <dd><%if(user.idcard){%><%= user.idcard%><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>籍贯</dt>
                        <dd><%if(user.address){%><%= user.address %><%}else{%>暂无<%}%></dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>身份证正面</dt>
                        <dd>
                          <%if(user.idcard_front){%>
                          <img src="/upload/idcard/<%=user.idcard_front%>" width="245" height="158" class="img-rounded" title="身份证正面" alt="身份证正面">
                          <%}else{%>
                          暂无
                          <%}%>
                        </dd>
                      </dl>
                    </div>
                    <div class="col-md-6">
                      <dl class="dl-horizontal">
                        <dt>身份证背面</dt>
                        <dd>
                          <%if(user.idcard_back){%>
                          <img src="/upload/idcard/<%= user.idcard_back %>" width="245" height="158" class="img-rounded" title="身份证背面" alt="身份证背面">
                          <%}else{%>暂无<%}%>
                        </dd>
                      </dl>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="warp-footer"></div>
        </div>
      </div>
    	<%- include('../footer') %>
    </div>
    <%- include('../script')%>
  </body>
</html>
