<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-id="staff_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">部门员工</h3>
            </div>
            <div class="panel-body">
              <div class="btn-group">
                <a href="" class="btn btn-default btn-success">分类</a>
                <a href="" class="btn btn-default">分类</a>
              </div>
              <form action="#" class="form-horizontal col-md-6" role="form">
                <label for="" class="col-md-3 label-control">输入查找条件</label>
                <div class="col-md-6">
                  <input type="text" class="form-control">
                </div>
                <button class="btn btn-warning">查询</button>
              </form>
              <table class="table table-bordered">
                <thead>
                  <tr class="info">
                    <th>序号</th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>手机</th>
                    <th>邮箱</th>
                    <th>企业</th>
                    <th>部门</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
              <% users.forEach(function(user, index){ %>
              <tr data-id="<%= user._id%>">
                <td><%= index+1%></td>
                <td><%= user.name%></td>
                <td><% if(user.gender == '0') {%> 男 <% }else{%> 女 <%}%></td>
                <td><%= user.mobile %></td>
                <td><%= user.email%></td>
                <td><%= user.partner.name %></td>
                <td><%if(user.organize.name){%><%= user.organize.name %><%}%></td>
                <td style="min-width: 115px">
                  <button class="btn btn-warning btn-sm btn-edit" data-toggle="modal" href="#myModal">编辑</button>
                  <button class="btn btn-danger btn-sm btn-del">删除</button>
                </td>
              </tr>
            <% })%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
      <div class="modal-dialog">
          <div class="modal-content">
            <form action="/partner/new_organize" method="post" id="organizeForm" class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">新增部门</h4>
              </div>
              <div class="modal-body">
                <input type="hidden" id="orgParentId" name="organize[parentId]" value="">
                <input type="hidden" id="organizeId" name="organize[id]" value="">
                <div class="form-group row">
                  <label for="" class="col-md-offset-1 col-md-2 control-label">部门名称</label>
                  <div class="col-md-8">
                    <input type="text" name="organize[name]" id="organizeName" class="form-control username">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="" class="col-md-offset-1 col-md-2 control-label">部门简介</label>
                  <div class="col-md-8">
                    <textarea name="organize[profile]" id="organizeProfile" class="form-control" rows="3" placeholder="选填"></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button type="submit" id="organizeSubmitBtn"class="btn btn-success">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.zTree.all.min.js"></script>
    <script src="/js/organize.js"></script>
  </body>
</html>
