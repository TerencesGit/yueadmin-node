<!DOCTYPE html>
<html>
  <head>
    <%- include('../link') %>
    <link rel="stylesheet" href="/plugins/zTree/css/zTreeStyle.css">
  </head>
  <body>
    <%- include('../aside') %>
    <%- include('../header') %>
    <div id="main" class="main" data-page="staff_manage">
      <div class="wrapper animated fadeInRight">
        <div class="container-fluid">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">员工管理</h3>
            </div>
            <div class="panel-body">
              <div class="row form-horizontal m-b">
                <label for="" class="col-md-1 control-label">性别：</label>
                <div class="col-md-2">
                  <select name="" id="" class="form-control">
                    <option value="0">不限</option>
                    <option value="0">男</option>
                    <option value="0">女</option>
                  </select>
                </div>
                <label for="" class="col-md-2 control-label">注册时间：</label>
                <div class="col-md-2">
                  <input type="text" class="form-control" placeholder="">
                </div>
                 <label for="" class="col-md-1 control-label">姓名：</label>
                <div class="col-md-2">
                  <input type="text" class="form-control" placeholder="姓名">
                </div>
                <button class="btn btn-warning">搜索</button>
                <!-- <dl class="dl-horizontal col-md-4">
                  <dt>查询条件：</dt>
                  <dd>
                    <form action="" method="get"> 
                      <select name="" id="" class="form-control">
                        <option value="">工号</option>
                        <option value="">姓名</option>
                        <option value="">注册日期</option>
                        <option value="">性别</option>
                      </select>
                    </form>                            
                  </dd>
                </dl>
                <dl class="dl-horizontal col-md-6">
                  <dt>关键字：</dt>
                  <dd>
                    <div class="col-md-8">
                      <input type="text" class="form-control">
                    </div>
                    <button class="btn btn-warning scarch-btn">查询</button>
                  </dd>
                </dl> -->                      
              </div>
              <table class="table table-bordered">
                <thead>
                  <tr class="info">
                    <th>序号</th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>邮箱</th>
                    <th>注册日期</th>
                    <th>部门</th>
                    <th>详细信息</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                   <% users.forEach(function(user, index){ %>
                  <tr data-id="<%= user._id%>">
                    <td><%= index+1%></td>
                    <td><%= user.name%></td>
                    <td><% if(user.gender == '0') {%> 男 <% }else{%> 女 <%}%></td>
                    <td><%= user.email%></td>
                    <td><%= moment(user.meta.createAt).format('YYYY-MM-DD') %></td>
                    <td><%if(user.organize && user.organize.name){%><%= user.organize.name %><%}%></td>
                    <td><a href="#">查看</a></td>
                    <td>
                      <a href="#setOrganizeModal" class="btn btn-link btn-set" data-toggle="modal">部门设置</a>
                    </td>
                  </tr>
                  <% })%>
                </tbody>
              </table>
              <ul class="pagination">
                <li><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="warp-footer"></div>
      </div>
    	<%- include('../footer') %>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="setOrganizeModal" class="modal fade organize-modal">
      <div class="modal-dialog">
          <div class="modal-content">
            <form action="/partner/set_organize" method="post" id="setOrganizeForm" class="form-horizontal">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title">部门设置</h4>
              </div>
              <div class="modal-body">
                <ul id="organizeTree" class="ztree" data-id="<%= user.partner%>"></ul>
                <input type="hidden" id="userId" name="user[id]" value="">
                <input type="hidden" id="organizeId" name="user[organizeId]" value="">
              </div>
              <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="reset">取消</button>
                <button type="submit" id="setOrganizeBtn"class="btn btn-success">提交</button>
              </div>
            </form>
          </div>
      </div>
    </div>
    <%- include('../script')%>
    <script src="/plugins/zTree/js/jquery.zTree.all.min.js"></script>
    <script src="/js/organize.js"></script>
  </body>
</html>
